<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">


    <navigation-rule>
        <description>Home</description>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.jsf</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Batches</description>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>batches</from-outcome>
            <to-view-id>/admin/batches.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Users</description>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>users</from-outcome>
            <to-view-id>/admin/users.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Profile</description>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/profile.jsf</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Login</description>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.jsf</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Logout</description>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/logout.jsf</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


    <navigation-rule>
        <description>Profile update</description>
        <from-view-id>/profile.xhtml</from-view-id>
        <navigation-case>
            <to-view-id>/index.xhtml</to-view-id>
            <from-outcome>update</from-outcome>
            <redirect>true</redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Profile cancel</description>
        <from-view-id>/profile.xhtml</from-view-id>
        <navigation-case>
            <to-view-id>/index.xhtml</to-view-id>
            <from-outcome>cancel</from-outcome>
            <redirect>true</redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Profile error</description>
        <from-view-id>/profile.xhtml</from-view-id>
        <navigation-case>
            <to-view-id>/profile.xhtml</to-view-id>
            <from-outcome>error</from-outcome>
            <redirect>false</redirect>
        </navigation-case>
    </navigation-rule>
</faces-config>